{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=photosorter.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileStorage": {
    "PhotosPath": "wwwroot/photos",
    "ThumbnailsPath": "wwwroot/thumbnails",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp"]
  }
}